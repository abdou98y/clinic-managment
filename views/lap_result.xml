<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_lab_result_form" model="ir.ui.view">
        <field name="name">clinic.lab.result.form</field>
        <field name="model">clinic.lab.result</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="patient_id"/>
                        <field name="date"/>
                        <field name="test_name"/>
                        <field name="result_file"  widget="pdf_viewer" filename="result_filename"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_lab_result_list" model="ir.ui.view">
        <field name="name">clinic.lab.result.list</field>
        <field name="model">clinic.lab.result</field>
        <field name="arch" type="xml">
            <list>
                <field name="patient_id"/>
                <field name="date"/>
                <field name="test_name"/>
            </list>
        </field>
    </record>
</odoo>
